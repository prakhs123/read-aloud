{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "version": "2.0.0",

  "default_locale": "en",
  "description": "__MSG_extension_description__",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts"
  ]
}
